{
  "compilerOptions": {
    "target": "es5",                          
    "module": "commonjs",                    
    "lib": ["es6"],                     
    "allowJs": true,
    "outDir": "dist",                          
    "rootDir": "src",
    "strict": true,         
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
  },
  "exclude": [
    "node_modules",
    "jest.config.js",
  ],
  "include": [
    "src",
    "src/CLINIC_TIMES.json",
    "src/test/CLINIC_TIMES_TEST.json"
  ]
}